@using Microsoft.AspNetCore.Authentication

<h4>API 1</h4>
<a class="btn btn-primary m-2" asp-action="Api1Data">Call API1 - unauthorized</a>
<a class="btn btn-primary m-2" asp-action="Api1UserData">Call API1 - authorized</a>
<a class="btn btn-primary m-2" asp-action="Api1AdminData">Call API1 - as admin</a>
<a class="btn btn-primary m-2" asp-action="DelayedDataRequests">Get delayed data - load balance example </a>
<br />
<br />
<form asp-action="CreateApi1Data" asp-controller="Home">
    <input type="text" name="api1data" value="" />
    <button type="submit">Create API1 data</button>
</form>
<hr />
<br />

<h4>API 2</h4>
<a class="btn btn-primary m-2" asp-action="Api2Data">Call API2 - unauthorized</a>
<a class="btn btn-primary m-2" asp-action="Api2UserData">Call API2 - authorized</a>
<a class="btn btn-primary m-2" asp-action="Api2AdminData">Call API2 - as admin</a>
<a class="btn btn-primary m-2" asp-action="Api1and2Data">Call API1 and 2 </a>

<br />
<br />
<h2>Claims</h2>

<dl>
    @foreach (var claim in User.Claims)
    {
        <dt>@claim.Type</dt>
        <dd>@claim.Value</dd>
    }
</dl>

<h2>Properties</h2>

<dl>
    @foreach (var prop in (await Context.AuthenticateAsync()).Properties.Items)
    {
        <dt>@prop.Key</dt>
        <dd>@prop.Value</dd>
    }
</dl>